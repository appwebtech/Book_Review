<div class="review">

	<div class="review-rating" data-score="<%= review.rating %>">
	</div>

	<p class="review-comment"><%= review.comment %></p>

	<% if user_signed_in? %>

		<div class="links btn-group">

			<% if review.user_id == current_user.id %>

					<%= link_to "Edit", edit_book_review_path(review.book, review), class: "btn btn-custom" %>

					<%= link_to "Delete", book_review_path(review.book, review), method: :delete, class: "btn btn-custom",  data: { confirm: "Are you sure?",  } %>
		</div>
			<% end %>
		<% end %>
	</div>