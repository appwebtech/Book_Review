<%= simple_form_for @book, :html => { :multipart => true } do |joe| %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
	<%= joe.input :title, label: "Book Title" %>
	<%= joe.input :description %>
	<%= joe.input :author %>
	<%= joe.button :submit %>
<% end %>